{
  "name": "create-cronos",
  "version": "0.2.0",
  "description": "Generate a project with Vite, Express, Next.js, Astro and other technologies with a single command.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cronosjs-labs/create-cronos"
  },
  "homepage": "cronosjs.dev/",
  "main": "app.js",

  "scripts": {
    "ci": "act",
    "build": "esbuild ./src/app.ts --bundle --outfile=./bin/app.cjs --platform=node --minify",
    "install-global": "npm install -g .",
    "build-install": "turbo build install-global",
    "watch": "esbuild ./src/app.ts --bundle --outfile=./bin/app.cjs --platform=node --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "bin": {
    "create-cronos": "./bin/app.cjs"
  },
  "exports": {
    ".": "./app.js"
  },
  "keywords": [
    "cronos",
    "create-cronos",
    "project generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inquirer/checkbox": "^1.4.0",
    "@inquirer/prompts": "^3.3.0",
    "@inquirer/select": "^1.3.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.11",
    "inquirer-autocomplete-standalone": "^0.8.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.54.0",
    "minify": "^11.0.1",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^1.10.16"
  }
}